{
        "manifest_version": 2,
        "name": "Copy Link Text",
        "version": "1.0.1",
        "description": "Copies the text inside links",
        "default_locale": "en",
        "icons": {
                "16": "icons/icon-32.png",
                "32": "icons/icon-32.png",
                "48": "icons/icon-48.png",
                "96": "icons/icon-96.png"
        },
        "permissions": [
                "contextMenus",
                "tabs",
                "activeTab"
        ],
        "background": {
                "scripts": ["background.js"]
        },
        "content_scripts": [
                {
                        "matches": [
				"<all_urls>"
			],
                        "js": [
				"boot.js"
			]
                }
        ]
}
